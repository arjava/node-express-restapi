<h3 class="width-auto"><a class="btn btn-secondary" href="/movie">Create New</a> Movie List</h3>
<table class="table table-stripped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Director</th>
            <th>Release Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        {{!-- console.log(list) --}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.director}}</td>
            <td>{{this.release_date}}</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/movie/{{this._id}}">Edit</a>
                <a class="btn btn-primary btn-sm" href="/movie/delete/{{this._id}}"
                    onclick="return confirm('Are you sure you want to delete this movie?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>