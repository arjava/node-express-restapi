<h3 class="width-auto"><a class="btn btn-secondary" href="/user">Create New</a> User List</h3>
<table class="table table-stripped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        {{!-- console.log(list) --}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/user/{{this._id}}">Edit</a>
                <a class="btn btn-primary btn-sm" href="/user/delete/{{this._id}}"
                    onclick="return confirm('Are you sure you want to delete this User?');">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>